<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dateTime"
        android:layout_alignLeft="@+id/dateTime"
        android:layout_alignStart="@+id/dateTime"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/status"
        android:layout_alignLeft="@+id/status"
        android:layout_alignStart="@+id/status"
        />

    <TextView
        android:id="@+id/dateTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/event"
        android:layout_alignLeft="@+id/event"
        android:layout_alignStart="@+id/event"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dateTime2"
        android:layout_alignLeft="@+id/dateTime2"
        android:layout_alignStart="@+id/dateTime2"
        android:visibility="gone"
/>

    <TextView
        android:id="@+id/event2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/status2"
        android:layout_alignLeft="@+id/status2"
        android:layout_alignStart="@+id/status2"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dateTime3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/event2"
        android:layout_alignLeft="@+id/event2"
        android:layout_alignStart="@+id/event2"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/status3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dateTime3"
        android:layout_alignLeft="@+id/dateTime3"
        android:layout_alignStart="@+id/dateTime3"
        android:visibility="gone"
/>

    <TextView
        android:id="@+id/event3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/status3"
        android:layout_alignLeft="@+id/status3"
        android:layout_alignStart="@+id/status3"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/circle"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/dateTime"
        android:layout_toLeftOf="@+id/status"
        android:layout_toStartOf="@+id/status"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/circle"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/dateTime2"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignStart="@+id/imageView1"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/circle"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/dateTime3"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:visibility="gone"/>

</RelativeLayout>
</ScrollView>